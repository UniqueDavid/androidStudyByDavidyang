<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >
  <Button 
      android:text="创建确认取消对话框"
      android:onClick="createDialog01"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
      />
  <Button 
      android:text="创建单选对话框"
      android:onClick="createDialog02"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
      />
  <Button 
      android:text="创建多选对话框"
      android:onClick="createDialog03"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
      />
  <Button 
      android:text="创建进度对话框"
      android:onClick="createDialog04"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
      />


</LinearLayout>
